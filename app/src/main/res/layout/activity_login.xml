<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/poseme_bg_soft">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- 앱 로고 -->
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_poseme_logo"
            android:contentDescription="@string/app_name" />

        <!-- 앱 이름: 포즈미 -->
        <TextView
            android:id="@+id/txt_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="포즈미"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/poseme_text_dark" />

        <!-- 아이디 입력 -->
        <EditText
            android:id="@+id/edt_nickname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:hint="아이디"
            android:background="@drawable/bg_input_default"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/poseme_text_dark"
            android:textColorHint="@color/poseme_text_sub"
            android:inputType="textEmailAddress" />

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="비밀번호"
            android:background="@drawable/bg_input_default"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/poseme_text_dark"
            android:textColorHint="@color/poseme_text_sub"
            android:inputType="textPassword" />

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="로그인"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_button_primary" />

        <!-- 회원가입 -->
        <Button
            android:id="@+id/btn_signup_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="회원가입"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:textColor="@color/poseme_text_sub" />

        <!-- 비밀번호 찾기 -->
        <Button
            android:id="@+id/txt_find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:layout_marginLeft="130dp"
            android:background="@android:color/transparent"
            android:text="비밀번호 찾기"
            android:textSize="12sp"
            android:textColor="@color/poseme_text_sub"
            android:gravity="end" />

    </LinearLayout>
</ScrollView>
