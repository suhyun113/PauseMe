<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_solid_white"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 변경"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/poseme_text_dark" />

    <EditText
        android:id="@+id/edit_new_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="새 닉네임을 입력하세요"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/bg_input_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_nickname_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"
            android:textColor="@color/poseme_text_dark"
            android:background="@drawable/bg_card_solid_white"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btn_save_nickname_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="저장하기"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary" />
    </LinearLayout>
</LinearLayout>