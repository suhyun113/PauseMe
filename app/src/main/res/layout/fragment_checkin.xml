<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/poseme_bg_soft">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단바(공통) -->
        <include
            layout="@layout/view_topbar_back_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 오늘의 기분 안내 -->
            <TextView
                android:id="@+id/txt_checkin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 기분은 어땠나요?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/poseme_text_dark" />

            <TextView
                android:id="@+id/txt_checkin_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="달력에서 날짜를 눌러 오늘의 기분을 기록해 보세요 ✨"
                android:textSize="13sp"
                android:textColor="@color/poseme_text_sub" />

            <!-- 달력 카드 -->
            <include
                android:id="@+id/include_calendar"
                layout="@layout/view_checkin_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <!-- 선택한 날짜의 기분 카드 -->
            <include
                android:id="@+id/include_today_mood"
                layout="@layout/view_checkin_today_mood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <!-- 이번 달 통계 카드 -->
            <include
                android:id="@+id/include_month_stats"
                layout="@layout/view_checkin_month_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
