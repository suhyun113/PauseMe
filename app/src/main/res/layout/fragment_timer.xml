<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/poseme_bg_soft">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 타이틀 영역 -->
        <TextView
            android:id="@+id/txt_timer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집중 타이머"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/poseme_text_dark" />

        <TextView
            android:id="@+id/txt_timer_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집중하고 싶은 시간을 설정해 보세요 ⏱"
            android:textSize="14sp"
            android:textColor="@color/poseme_text_sub"
            android:layout_marginTop="4dp" />

        <!-- 동그라미 타이머 카드 -->
        <include
            android:id="@+id/include_timer_circle"
            layout="@layout/view_timer_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <!-- 프리셋 + 버튼 컨트롤 카드 -->
        <include
            android:id="@+id/include_timer_controls"
            layout="@layout/view_timer_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
