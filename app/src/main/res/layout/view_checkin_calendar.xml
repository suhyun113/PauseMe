<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_calendar_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_solid_white"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_calendar_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024년 12월"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/poseme_text_dark" />

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"

        android:weekDayTextAppearance="@style/CalendarTextStyle"
        android:dateTextAppearance="@style/CalendarTextStyle"

        android:focusedMonthDateColor="@color/poseme_purple_dark"
        android:unfocusedMonthDateColor="@color/poseme_text_sub"
        android:weekSeparatorLineColor="@android:color/transparent"
        android:showWeekNumber="false" />

</LinearLayout>