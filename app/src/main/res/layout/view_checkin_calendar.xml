<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_calendar_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_solid_white"
    android:padding="16dp">

    <!-- CalendarView -->
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CalendarViewTheme"

        android:weekDayTextAppearance="@style/CalendarTextStyle"
        android:dateTextAppearance="@style/CalendarTextStyle"

        android:focusedMonthDateColor="@color/poseme_text_dark"
        android:unfocusedMonthDateColor="@color/poseme_text_dark"
        android:weekSeparatorLineColor="@android:color/transparent"
        android:showWeekNumber="false" />
</LinearLayout>
