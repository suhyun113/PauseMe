<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_month_stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_solid_white"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번 달 통계"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/poseme_text_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_input_default">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="체크인 일수"
                android:textSize="13sp"
                android:textColor="@color/poseme_text_sub" />

            <TextView
                android:id="@+id/txt_month_checkin_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0일"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/poseme_purple" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_default">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="가장 많은 기분"
                android:textSize="13sp"
                android:textColor="@color/poseme_text_sub" />

            <TextView
                android:id="@+id/txt_month_top_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textSize="20sp"
                android:textColor="@color/poseme_text_dark" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
